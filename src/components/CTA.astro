---
const {
  class: className,
  href,
  isButton = false,
  primary = false,
} = Astro.props;
---

{
  isButton ? (
    <button class:list={["cta", { primary: primary }, className]}>
      <slot />
    </button>
  ) : (
    <a href={href} class:list={["cta", { primary: primary }, className]}>
      <slot />
    </a>
  )
}

<style>
  .cta {
    outline: 1px solid var(--primary);
    color: var(--text-dark);
    text-decoration: none;
    margin-block: 1rem;
    padding: 1em 2em;
    display: inline-block;
    cursor: pointer;

    transition:
      background-color var(--transition),
      outline var(--transition),
      box-shadow var(--transition),
      color var(--transition);
  }

  .cta.primary {
    background: var(--primary);
    color: var(--text-light);
  }

  .cta:hover,
  .cta:focus-visible {
    background: var(--primary);
    color: var(--text-light);
    box-shadow: 0px 5px 20px -2px var(--outline-color-mute);
  }

  .cta.primary:hover,
  .cta.primary:focus-visible {
    background: transparent;
    outline: 1px solid var(--primary);
    color: var(--text-dark);
    box-shadow: 0px 5px 20px -2px var(--outline-color-mute);
  }
</style>
