---
import BurgerMenu from "../components/BurgerMenu.astro";
---

<nav>
  <div class="logo">
    <a href="/">
      <i class="fa-solid fa-k"></i>
    </a>
  </div>

  <BurgerMenu />

  <ul class="nav-links-wrapper">
    <div class="nav-links-wrapper__header">
      <div class="logo">
        <a href="/">logo</a>
      </div>
      <button id="close-nav" title="close navbar">
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>

    <li><a class="nav-links" href="/">Home</a></li>
    <li><a class="nav-links" href="/about">About</a></li>
    <li><a class="nav-links" href="/blog">Blog</a></li>
  </ul>
</nav>

<style>
  nav {
    padding-inline: 0.5rem;
    color: var(--nav-link-color);

    user-select: none;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 10;
  }

  nav,
  .nav-links-wrapper__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav a {
    color: inherit;
    text-decoration: unset;
    display: block;
    position: relative;
  }

  nav button {
    cursor: pointer;
  }

  .logo,
  .nav-links-wrapper {
    background: var(--navbar-bg);
  }

  .nav-links-wrapper {
    backdrop-filter: blur(10px);
    list-style-type: none;
    padding: 0;
    margin: 0;

    position: fixed;
    inset: 0 0 auto 0;
    display: flex;
    flex-direction: column;

    transform: translateY(-100%);
    transition: transform 200ms ease;
  }

  .nav-links-wrapper.active {
    backdrop-filter: blur(0.5rem);
    transform: none;
  }

  nav > *,
  .nav-links-wrapper__header > *,
  .nav-links {
    padding: 1.5rem;
  }

  .nav-links {
    text-align: right;
  }

  .nav-links::before {
    content: "";
    position: absolute;
    bottom: 0;
    right: 0;
    width: 0.5rem;
    height: 100%;
    background: #ddd;
    transform: scale(0);
    transition: transform var(--transition);
  }

  .nav-links:focus::before {
    transform: scale(1);
  }

  @media (hover: hover) {
    .nav-links:hover,
    nav button:hover {
      color: var(--nav-link-color-hover);
    }

    .nav-links:hover::before {
      transform: scale(1);
    }
  }

  @media screen and (min-width: 50em) {
    .nav-links-wrapper {
      transform: none;
      position: relative;
      flex-direction: row;
    }

    .nav-links-wrapper__header {
      display: none;
    }

    .nav-links::before {
      width: 100%;
      height: 0.1rem;
    }
  }
</style>
