---
import MyLayout from "./MyLayout.astro";
import Footer from "@/components/Footer.astro";
const { title, description } = Astro.props;
---

<MyLayout {title} {description}>
  <main>
    <slot />
  </main>

  <Footer />
</MyLayout>

<style>
  main {
    min-height: 80vh;

    --column-count: 6;
    display: grid;
    align-content: start;
    grid-template-columns:
      minmax(1rem, 1fr)
      repeat(var(--column-count), minmax(0, 10rem))
      minmax(1rem, 1fr);

    gap: 0 1rem;
    overflow-x: hidden;
  }
</style>

<style is:global>
  main > * {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: subgrid;
  }

  .full-columns > * {
    grid-column: 2 / span 6;
  }

  main header > * {
    grid-column: 1 / -1;
  }

  .odd-columns > * {
    grid-column: span 2;

    @media screen and (width < 50em) {
      grid-column: span 3;
    }

    @media screen and (width < 30em) {
      grid-column: 1/ -1;
    }
  }
</style>
